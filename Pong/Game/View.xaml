<Page x:Class="Pong.Game.View"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pong.Game"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="View">
    <Grid>
        <Canvas x:Name="game" Background="Black">
            <Image Panel.ZIndex="1" x:Name="feelsgoodman" Source="feelsgoodman.png" Width="80" Visibility="Hidden"></Image>
            <Image Panel.ZIndex="1" x:Name="feelsbadman" Source="feelsbadman.png" Width="80" Visibility="Hidden"></Image>
        </Canvas>
        <StackPanel x:Name="gameOver" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Foreground="White" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center">Game Over</TextBlock>
            <Button FontSize="20" BorderThickness="0" Background="Transparent" Foreground="White" Click="MainMenu" HorizontalAlignment="Center" VerticalAlignment="Center">Back to menu</Button>
        </StackPanel>
    </Grid>
</Page>
